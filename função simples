programa
{
	funcao inicio()
	{
		linha()
		escreva("\n Insira um número inteiro: ")
		inteiro numInteiro
		leia(numInteiro)		
		parOuImpar(numInteiro)
		linha()
	}

	funcao parOuImpar (inteiro numeroCalcular){	
		se(numeroCalcular%2==0){
			escreva("\n O número inserido é par!")
		}senao{
			escreva("\n O número inserido é impar!")
		}
	}

	funcao vazio linha(){
		escreva("\n --------------------------------")		
	}
}
